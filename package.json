{
  "license": "MIT",
  "name": "@hexpayday/stake-manager",
  "scripts": {
    "build": "yarn run lint && yarn run metrics && yarn run cloc && yarn run docs",
    "metrics": "solidity-code-metrics ./contracts/*.sol > metrics.md",
    "docs": "rm -rf docs && hardhat docgen && cp ./*.md docs && rm docs/cloc.md docs/metrics.md && yarn run copy-static",
    "copy-static": "cp -r static/* docs",
    "cloc": "cloc --by-file --out=./cloc.md ./contracts/*.sol",
    "lint": "solhint 'contracts/**/*.sol'",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "coveralls": "hardhat coverage && shx cat ./coverage/lcov.info | coveralls --verbose",
    "analyze": "slither ./contracts/ --solc-remaps @openzeppelin=node_modules/@openzeppelin --hardhat-ignore-compile --exclude-dependencies --hardhat-cache-directory ./cache_hardhat",
    "analyze:minimal": "yarn run analyze --exclude unused-state-variable,incorrect-versions-of-solidity,variable-names-too-similar,uninitialized-state-variables,different-pragma-directives-are-used,incorrect-versions-of-solidity",
    "foundry:test": "FORK_URL=\"https://rpc.pulsechain.com\" yarn run foundry:test-fork",
    "dev": "hardhat node",
    "setup-local": "./local-deployment.sh",
    "foundry:test-fork": "forge test --cache-path forge-cache --fork-url $FORK_URL -vvv --gas-report"
  },
  "files": [
    "artifacts"
  ],
  "engines": {
    "node": ">=20.6"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@hexpayday/solidity-code-metrics": "^0.0.26",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.9.2",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.194",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^20.5.0",
    "@types/yargs": "^17.0.24",
    "chai": "^4.2.0",
    "cloc": "^1.98.0-cloc",
    "coveralls": "^3.1.1",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "ethers": "5.7.2",
    "hardhat": "^2.17.1",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-preprocessor": "^0.1.5",
    "hardhat-tracer": "^2.5.0",
    "hardhat-vizor": "^0.0.23",
    "lodash": "^4.17.21",
    "mocha-lcov-reporter": "^1.3.0",
    "shx": "^0.3.4",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.5",
    "solidity-docgen": "^0.6.0-beta.36",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^5.0.4",
    "yargs": "^17.7.2"
  },
  "version": "1.0.16"
}
