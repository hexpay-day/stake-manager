{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "./node_modules/@nomicfoundation/hardhat-ethers",
    "./hardhat.config.ts",
    "src/**/*.ts",
    "tasks/**/*.ts",
    "artifacts/types/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/@nomicfoundation/hardhat-ethers"
  ]
}
